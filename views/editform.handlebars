<div class="row">

    <div class="col-sm-8">

        <form class="form" role="form" method="POST" action="/update/{{reqid}}">

            <!-- this line is required for PUT and DELETE when using EXPRESS middleware -->
            <input type="hidden" name="_method" value="PUT">

            <div class="form-group">
                <label for="pa">PA: </label>
                <input type="number" class="form-control" id="pa" placeholder="PA ..."
                       name="pa"
                       value="{{result.pa}}"
                       >
            </div>

            <div class="form-group">
                <label for="source">Source: </label>
                <input type="text" class="form-control" id="source" placeholder="source ..."
                       name="source"
                       value="{{result.source}}"
                       >
            </div>

            <div class="form-group">
                <label for="client">Client: </label>
                <input type="text" class="form-control" id="client" placeholder="client ..."
                       name="client"
                       value="{{result.client}}"
                       >
            </div>

            <div class="form-group">
                <label for="note">Note: </label>
                <input type="text" class="form-control" id="note" placeholder="note ..."
                       name="note"
                       value="{{result.note}}"
                       >
            </div>

            <div class="form-group">
                <label for="initial">initial: </label>
                <input type="text" class="form-control" id="initial" placeholder="initial ..."
                       name="initial"
                       value="{{result.initial}}"
                       >
            </div>

            <button type="submit" class="btn btn-default">Update</button>
            <a href="/">Cancel</a>

        </form>

    </div>

</div>