<!--PA Table-->
<h2 class="sub-header">PA Table</h2>
<div class="table-responsive" id="patable">
    <table class="table table-striped table-condensed">

        <thead>
        <tr>
            <th>PA</th>
            <th>Source</th>
            <th>Client</th>
            <th>Note</th>
            <th>Last update</th>
            <th>initial</th>
        </tr>
        </thead>

        <tbody>
        {{#each results}}
            <tr>
                <td>{{this.pa}}</td>
                <td>{{this.source}}</td>
                <td>{{this.client}}</td>
                <td>{{this.note}}</td>
                <td>{{this.update}}</td>
                <td>{{this.initial}}</td>
                <td>
                    <a href="/edit/{{this._id}}" class="btn btn-default btn-xs">edit</a>
                </td>
                <td>
                    <form method="POST" action="/clear/{{this._id}}"
                          enctype="application/x-www-form-urlencoded">

                        <input type="hidden" name="_method" value="PUT" >
                        <button type="submit" class="btn btn-warning btn-xs">clr</button>
                    </form>
                </td>
                <td>
                    <form method="POST" action="/delete/{{this._id}}"
                          enctype="application/x-www-form-urlencoded">

                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-xs">del</button>

                    </form>
                </td>
            </tr>
        {{/each}}
        </tbody>

    </table>
</div>


